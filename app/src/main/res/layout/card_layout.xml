<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_table"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cell_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"

        app:cardBackgroundColor="@color/cell_background"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:id="@+id/singleRowContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center">

            <TextView
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cell_margin"
                android:layout_weight="2"

                android:fontFamily="sans-serif-thin"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/cell_padding_horizontal"
                android:paddingTop="@dimen/cell_padding_vertical"
                android:paddingRight="@dimen/cell_padding_horizontal"
                android:paddingBottom="@dimen/cell_padding_vertical"
                android:text="TextView"
                android:textColor="@color/text_color"
                android:textSize="@dimen/state_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/active"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cell_margin"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/cell_padding_horizontal"
                android:paddingTop="@dimen/cell_padding_vertical"
                android:paddingRight="@dimen/cell_padding_horizontal"
                android:paddingBottom="@dimen/cell_padding_vertical"
                android:text="TextView"
                android:textColor="@color/active"
                android:textSize="@dimen/table_text_size" />

            <TextView
                android:id="@+id/confirmed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cell_margin"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/cell_padding_horizontal"
                android:paddingTop="@dimen/cell_padding_vertical"
                android:paddingRight="@dimen/cell_padding_horizontal"
                android:paddingBottom="@dimen/cell_padding_vertical"
                android:text="TextView"
                android:textColor="@color/confirmed"
                android:textSize="@dimen/table_text_size" />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cell_margin"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/cell_padding_horizontal"
                android:paddingTop="@dimen/cell_padding_vertical"
                android:paddingRight="@dimen/cell_padding_horizontal"
                android:paddingBottom="@dimen/cell_padding_vertical"
                android:text="TextView"
                android:textColor="@color/recovered"
                android:textSize="@dimen/table_text_size" />

            <TextView
                android:id="@+id/deaths"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cell_margin"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/cell_padding_horizontal"
                android:paddingTop="@dimen/cell_padding_vertical"
                android:paddingRight="@dimen/cell_padding_horizontal"
                android:paddingBottom="@dimen/cell_padding_vertical"
                android:text="TextView"
                android:textColor="@color/deaths"
                android:textSize="@dimen/table_text_size" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>